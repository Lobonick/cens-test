<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_leave_vaca01_tree" model="ir.ui.view">
            <field name="name">hr.leave.vaca01.tree.</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <tree string="Cálculo de Vacaciones" limit="300">
                    <header>
                        <button name="action_genera_calculo_vaca" 
                                string=" Calcula Vacaciones" 
                                confirm="¿Está seguro de CÁLCULO MASIVO?"
                                type="object" 
                                class="btn-primary"
                                icon="fa-wrench"
                                help="Crea reporte con los Empleados seleccionados." />
                    </header>
                    <field name="company_id" invisible="1"/>
                    <field name="user_id" invisible="1"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="name"/>
                    <field name="x_studio_documento_identidad"/>
                    <field name="department_id"/>
                    <field name="x_studio_negocio_unidad"/>
                    <field name="job_id"/>
                    <field name="x_studio_estado_contrato" optional="show" widget="badge" decoration-info="x_studio_estado_contrato == 'draft'" decoration-warning="x_studio_estado_contrato == 'close'" decoration-success="x_studio_estado_contrato == 'open'"/>
                </tree>
            </field>
        </record>


        <!-- ACTION mostrar epleados a seleccionar -->
        <record id="action_ausencias_vaca_01" model="ir.actions.act_window">
            <field name="name">Cálculo Vacaciones - Selección</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree</field>
            <field name="context">{'create': 0}</field>
            <field name="view_id" ref="view_hr_leave_vaca01_tree"/>
            <field name="domain">[('x_studio_estado_contrato', 'in', ['open','close'])]</field>
            <!--
            <field name="domain">[]</field>
            <field name="domain">[('contract_id.state', '=', 'open'), ('x_studio_sujeto_a_renta_5cat', '=', True)]</field>
            -->
        </record>

    </data>
</odoo>




