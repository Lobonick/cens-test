<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="hr_payslip_tree_inherit">
            <field name="name">hr.payslip.tree.cens_inherit</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="export_to_spreadsheet" class="btn btn-primary" string="Exportar a Excel" type="object"/>
                    <button name="%(action_import_xlsx_wizard)d" class="btn btn-primary" string="Importar desde Excel" type="object"/>
                    <!--
                    <button name="%(action_import_xlsx_wizard)d" 
                            class="oe_highlight" 
                            string="Importar desde Excel" 
                            icon="fa-thumbs-up" 
                            confirm="Â¿Seguro importar DATOS?" 
                            type="action"/>
                    -->
                </xpath>
            </field>
        </record>

        <record id="view_import_xlsx_wizard" model="ir.ui.view">
            <field name="name">import.xlsx.wizard.form</field>
            <field name="model">import.xlsx.wizard</field>
            <field name="arch" type="xml">
                <form string="Importar_desde_Excel">
                    <group>
                        <field name="file" filename="file_name"/>
                    </group>
                    <footer>
                        <button string="Importar" type="object" name="action_import_file" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_import_xlsx_wizard" model="ir.actions.act_window">
            <field name="name">Importar_desde_Excel</field>
            <field name="res_model">import.xlsx.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
