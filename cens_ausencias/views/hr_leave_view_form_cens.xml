<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="custom_hr_leave_view_form">
            <field name="name">hr.leave.view.form.custom</field>
            <field name="model">hr.leave</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='holiday_type']" position="before">
                    <group name="studio_group_bloque1">
                    <group name="studio_group_bloque1_left"/>
                        <field name="x_cens_codiden" string="CODIGO:" />
                        <field name="x_cens_hora" string="Hora:" />
                    <group name="studio_group_bloque1_right"/>
                    </group>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/div[2]" position="after">
                    <group name="studio_group_bloque2">
                    <group name="studio_group_bloque2_left"/>
                    <group name="studio_group_bloque2_right"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

