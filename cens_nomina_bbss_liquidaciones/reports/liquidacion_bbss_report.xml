<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_a4_minimal" model="report.paperformat">
        <field name="name">A4 - Liquidación BBSS Mínimo</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <!--
        <field name="page_height">297</field>
        <field name="page_width">210</field>
        -->
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>     <!-- MÍNIMO: 5mm -->
        <field name="margin_bottom">10</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">110</field>            <!-- Mayor resolución para mejor calidad -->
    </record>

    <!-- Reporte actualizado con nueva configuración --> 'ir.ui.view
    <record id="action_report_liquidacion_bbss" model="ir.actions.report">
        <field name="name">Liquidación de Beneficios Sociales</field>
        <field name="model">hr.payslip.liquidacion</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">cens_nomina_bbss_liquidaciones.liquidacion_bbss_document</field>
        <field name="report_file">cens_nomina_bbss_liquidaciones.liquidacion_bbss_document</field>
        <field name="binding_model_id" ref="hr_payroll.model_hr_payslip"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">'Liquidación BB.SS. - %s' % (object.employee_id.name)</field>
        <field name="paperformat_id" ref="paperformat_a4_minimal"/>
    </record>
</odoo>